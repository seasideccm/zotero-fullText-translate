{
    "name": "zotero-fullText-translate",
    "version": "1.0.1",
    "description": "zotero FullText Translate",
    "config": {
        "addonName": "zotero FullText Translate",
        "addonID": "fullText_translate@sscc.org",
        "addonRef": "fullTextTranslate",
        "addonInstance": "FullTextTranslate",
        "prefsPrefix": "extensions.zotero.FullTextTranslate",
        "releasepage": "https://github.com/seasideccm/zotero-fullText-translate/releases/latest/download/zotero-fullText-translate.xpi",
        "updaterdf": "https://github.com/seasideccm/zotero-fullText-translate/main/update.json"
    },
    "main": "src/index.ts",
    "scripts": {
        "build-dev": "cross-env NODE_ENV=development node scripts/build.mjs",
        "build-prod": "cross-env NODE_ENV=production node scripts/build.mjs",
        "build": "concurrently -c auto npm:build-prod npm:tsc",
        "tsc": "tsc --noEmit",
        "start": "node scripts/start.mjs",
        "start-watch": "npm run build-dev && concurrently -c auto npm:start npm:watch",
        "stop": "node scripts/stop.mjs",
        "restart-dev": "npm run build-dev && npm run stop && npm run start",
        "restart-prod": "npm run build-prod && npm run stop && npm run start",
        "restart": "npm run restart-dev",
        "reload": "npm run build-dev && node scripts/reload.mjs",
        "watch": "chokidar \"src/**\" \"addon/**\" -c \"npm run reload\"",
        "release": "release-it",
        "lint": "prettier --write . && eslint . --ext .ts --fix",
        "test": "echo \"Error: no test specified\" && exit 1",
        "update-deps": "npm update --save"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/seasideccm/zotero-fullText-translate.git"
    },
    "author": "SSCC",
    "license": "AGPL-3.0-or-later",
    "bugs": {
        "url": "https://github.com/seasideccm/zotero-fullText-translate/issues"
    },
    "homepage": "https://github.com/seasideccm/zotero-fullText-translate#readme",
    "dependencies": {
        "buffer": "^6.0.3",
        "cropperjs": "2.0.0-beta.4",
        "decimal.js": "^10.4.3",
        "dragula": "^3.7.3",
        "fabric": "6.0.0-beta15",
        "franc-min": "^6.1.0",
        "hast-util-to-html": "^9.0.0",
        "hast-util-to-mdast": "^8.4.1",
        "hast-util-to-text": "^4.0.0",
        "hastscript": "^8.0.0",
        "md5": "^2.3.0",
        "rehype-parse": "^8.0.5",
        "rehype-remark": "^9.1.2",
        "rehype-stringify": "^9.0.4",
        "remark-gfm": "^3.0.1",
        "remark-math": "^5.1.1",
        "remark-parse": "^10.0.2",
        "remark-rehype": "^10.1.0",
        "remark-stringify": "^10.0.3",
        "ts-node": "^10.9.2",
        "unified": "^10.1.2",
        "unist-util-visit": "^5.0.0",
        "unist-util-visit-parents": "^6.0.1",
        "viewerjs": "^1.11.6",
        "zotero-plugin-toolkit": "^2.3.15"
    },
    "devDependencies": {
        "@types/dragula": "^3.7.4",
        "@types/md5": "^2.3.5",
        "@types/node": "^20.10.5",
        "@typescript-eslint/eslint-plugin": "^6.16.0",
        "@typescript-eslint/parser": "^6.16.0",
        "chokidar-cli": "^3.0.0",
        "compressing": "^1.10.0",
        "concurrently": "^8.2.2",
        "cross-env": "^7.0.3",
        "esbuild": "^0.18.20",
        "eslint": "^8.56.0",
        "eslint-config-prettier": "^9.1.0",
        "prettier": "^3.1.1",
        "release-it": "^16.3.0",
        "replace-in-file": "^7.0.2",
        "tslib": "^2.6.2",
        "typescript": "^5.3.3",
        "zotero-types": "^1.3.11"
    }
}
{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "ES2016",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "lib",
    "soureMap":true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "./typings",
    "moduleResolution": "Node",
    "esModuleInterop":true,

  },
  "include": ["src", "typings", "node_modules/zotero-types"],
  "exclude": ["build", "addon"]
}
